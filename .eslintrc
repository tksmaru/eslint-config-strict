rules:
  indent:
    - 2
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  #
  # "Possible Errors"
  #
  no-extra-parens:
    - 1
    - functions
  no-unexpected-multiline: 2
  #
  # Depends on project policy
  #
  valid-jsdoc: 0

  #
  # Best Practices
  #
  accessor-pairs: 2
  block-scoped-var: 2
  complexity: 2
  consistent-return: 2
  curly: 2
  default-case: 2
  #
  # That's my favorite way :-)
  #
  dot-location:
    - 2
    - property
  #
  # It depends on the case
  #
  dot-notation:
    - 1
    - allowPattern: "^[a-z]+(_[a-z]+)+$"
  eqeqeq: 2
  guard-for-in: 2
  no-alert: 2
  no-caller: 2
  no-case-declarations: 2
  no-div-regex: 2
  no-else-return: 2
  no-empty-label: 2
  no-empty-pattern: 2
  no-eq-null: 2
  no-eval: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-implicit-coercion: 2
  no-implied-eval: 2
  no-invalid-this: 2
  no-iterator: 2
  no-labels: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-magic-numbers: 2
  no-multi-spaces: 2
  no-multi-str: 2
  no-native-reassign: 2
  no-new-func: 2
  no-new-wrappers: 2
  no-new: 2
  no-octal-escape: 2
  no-octal: 2
  no-param-reassign: 2
  no-process-env: 2
  no-proto: 2
  no-redeclare: 2
  no-return-assign: 2
  no-script-url: urls.: 2
  no-self-compare: 2
  no-sequences: 2
  no-throw-literal: 2
  no-unused-expressions: 2
  no-useless-call: 2
  no-useless-concat: 2
  no-void: 2
  #
  # To avoid correspondig leakage
  #
  no-warning-comments:
    - 1
    - location: "anywhere"
  no-with: 2
  radix: 2
  #
  # Prefer vars to be decalred on just before they are used.
  #
  vars-on-top: 0
  wrap-iife: 2
  #
  # That's my favorite way :-)
  #
  yoda:
    - 2
    - "always"

  #
  # Strict Mode
  #
  strict: 2

env:
  browser: true
# based on version 1.9.0
extends: 'eslint:recommended'
